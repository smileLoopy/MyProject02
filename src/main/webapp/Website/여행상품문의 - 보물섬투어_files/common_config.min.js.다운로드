if(isAndroid > -1 || isiPop > -1  || isiPhone > -1 || isWC > -1 || isLG > -1 || isMOT > -1 || isSAMSUNG > -1 || isSonyEricsson > -1 || isBlackBerry > -1  ){
   appType = "mobile";
} else {
   appType = "web";
}

